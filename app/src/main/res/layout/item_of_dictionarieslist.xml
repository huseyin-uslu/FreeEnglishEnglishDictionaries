<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#00000000"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/UsluRadioButton"
        android:id="@+id/radioButtonForChoosingDictionary"
        android:gravity="center"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewInEachItem"
        android:layout_gravity="center"
        tools:src="@drawable/cambridge"
        android:importantForAccessibility="no"/>
    <TextView
        android:id="@+id/textViewInEachItem"
        android:layout_width="match_parent"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/cambridge_dictionary_name"/>


</LinearLayout>
</androidx.cardview.widget.CardView>