<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        tools:context=".screen.IntroFragment">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline_of_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.30"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline_of_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottom_guideline_of_intro"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline_of_intro"
            app:layout_constraintStart_toStartOf="@+id/left_guideline_of_intro"
            app:layout_constraintTop_toTopOf="@+id/top_guideline_of_intro">

            <TextView
                style="@style/PrimaryTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textAlignment="center" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/roundCardView"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/lightblue900"
                app:strokeWidth="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kutahya_icon"
                android:importantForAccessibility="no"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="5"/>

            <TextView
                style="@style/PrimaryTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/my_github_link"
                android:textAlignment="center" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline_of_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline_of_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.70"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>